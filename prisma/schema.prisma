generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int      @id @default(autoincrement())
  title      String
  uploadedAt DateTime @default(now()) @db.Timestamp()
  summary    String
  analysis   String
  author     String
  language   String   @db.VarChar(2)

  chapters Chapter[]
}

model Chapter {
  id      Int    @id @default(autoincrement())
  book_id Int
  number  Int
  name    String
  summary String @default("")
  book    Book   @relation(fields: [book_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
