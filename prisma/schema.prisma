generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int       @id @default(autoincrement())
  title           String
  uploadedAt      DateTime  @default(now()) @db.Timestamp(6)
  summary         String
  author          String
  analysis        String
  book_id         String    @default(uuid()) @db.Uuid
  bookLanguage    String    @db.VarChar(2)
  summaryLanguage String    @db.VarChar(2)
  gutenberg_id    String?
  chapters        Chapter[]

  @@unique([book_id, summaryLanguage])
  @@index([author(ops: raw("gin_trgm_ops"))], map: "book_author_trgm_idx", type: Gin)
  @@index([title(ops: raw("gin_trgm_ops"))], map: "book_title_trgm_idx", type: Gin)
}

model Chapter {
  id              Int    @id @default(autoincrement())
  number          Int
  name            String
  summary         String @default("")
  book_id         String @db.Uuid
  summaryLanguage String @db.VarChar(2)
  book            Book   @relation(fields: [book_id, summaryLanguage], references: [book_id, summaryLanguage], onDelete: NoAction, onUpdate: NoAction)
}
