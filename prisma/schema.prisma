generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int      @id @default(autoincrement())
  book_id         String   @default(uuid()) @db.Uuid
  title           String
  uploadedAt      DateTime @default(now()) @db.Timestamp()
  summary         String
  analysis        String
  author          String
  bookLanguage    String   @db.VarChar(2)
  summaryLanguage String   @db.VarChar(2)

  chapters Chapter[]

  @@unique([book_id, summaryLanguage])
}

model Chapter {
  id              Int    @id @default(autoincrement())
  book_id         String @db.Uuid
  number          Int
  name            String
  summary         String @default("")
  summaryLanguage String @db.VarChar(2)

  book Book @relation(fields: [book_id, summaryLanguage], references: [book_id, summaryLanguage], onDelete: NoAction, onUpdate: NoAction)
}
