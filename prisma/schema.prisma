generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int      @id @default(autoincrement())
  book_id    String   @default(uuid()) @db.Uuid
  title      String
  uploadedAt DateTime @default(now()) @db.Timestamp()
  summary    String
  analysis   String
  author     String
  language   String   @db.VarChar(2)

  chapters Chapter[]

  @@unique([book_id, language])
}

model Chapter {
  id       Int    @id @default(autoincrement())
  book_id  String @db.Uuid
  number   Int
  name     String
  summary  String @default("")
  language String @db.VarChar(2)
  book     Book   @relation(fields: [book_id, language], references: [book_id, language], onDelete: NoAction, onUpdate: NoAction)
}
